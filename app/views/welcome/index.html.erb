<div id= "side-squeezer">
  <div class= "row" style="margin-top: 25px;">
    <div id="col5">
      <div class="phatty"></div>
        <h1 class= "section">HEADLINES</h1>
          <p class="subsection" >Top Stories</p>

  <div class="csslider">
    <input type="radio" name="slides" checked="checked" id="slides_1"/>
    <input type="radio" name="slides" id="slides_2"/>
    <input type="radio" name="slides" id="slides_3"/>

        <ul class = 'uly'>
          <li class = 'ily'>
      <%@bing[0..3].each do |x| %>
          <div class = 'news-content'>
            <p class="source"><%= x['source'].upcase%></p>
            <p class="headline"><a href ="<%=x[:url]%>" target="_blank"> <%=x['title'].capitalize%></a></p>
            <p class="body-ar"><%= x['description']%></p>
        </div>
      <%end%>
    </li>

    <li class= 'ily'>
<%@bing[4..7].each do |x| %>
    <div class = 'news-content'>
      <p class="source"><%= x['source'].upcase%></p>
      <p class="headline"><a href ="<%=x[:url]%>" target="_blank"> <%=x['title'].capitalize%></a></p>
      <p class="body-ar"><%= x['description']%></p>
  </div>
<%end%>
</li>

<li class= 'ily'>
<%@bing[8..11].each do |x| %>
<div class = 'news-content'>
  <p class="source"><%= x['source'].upcase%></p>
  <p class="headline"><a href ="<%=x[:url]%>" target="_blank"> <%=x['title'].capitalize%></a></p>
  <p class="body-ar"><%= x['description']%></p>
</div>
<%end%>
</li>
    </ul>

<div class="arrows">
  <label for="slides_1"></label>
  <label for="slides_2"></label>
  <label for="slides_3"></label>
  <label for="slides_1" class="goto-first"></label>
  <label for="slides_3" class="goto-last"></label>
</div>
<div class="navigation">
  <div>
    <label for="slides_1"></label>
    <label for="slides_2"></label>
    <label for="slides_3"></label>
  </div>
</div>

  </div>
</div>
</div>


  <div class= "row" id="secondrow">
  <div class="col s3" style="display: inline-block;">
    <div class="phatty"></div>
      <h1 class= "section tooltipped" data-position="right" data-delay="50" data-tooltip="Today's most popular tweets">#TRENDING</h1>
      <p class="subsection" >On <span class="secsource">Twitter</span></p>
        <div id="tweetbox">
          <ul>
            <% @twit.each do |x| %>
            <li>
          <a class= "tweetlink" href = "<%=x[:url]%>" target="_blank"> <%=x[:name]%> </a>
            </li>
            <% end %>
          </ul>
      </div>
    </div>

    <div class="col s6" style="margin-left:200px">
      <div class="phatty"></div>
        <h1 class= "section tooltipped" data-position="right" data-delay="50" data-tooltip="Click on Photos to Enlarge">POPULAR</h1>
        <p class="subsection">On <span class="secsource">Instagram</span></p class="subsection">
        <div class="materialbox">
          <div id="photo-gallery" class="material-placeholder">
            <% @instagram[2..3].each do |x|%>
            <div class = 'insta-holder'>
              <img class="materialboxed" data-caption="User: <%=x['username']%> Description: <%=x['description']%>" width="235" src='<%= x['url'] %>'></img>
              <div class = 'insta-info'>
               <p> <a class="strong" href= 'https://instagram.com/<%=x['username']%>'><%=x['username']%></a> <%=x['description']%></p>
            <%x['tags'].gsub(/[\[\]"]/,"").split(",").each do |x| %>
              <div>
                #<%= x %>
              </div>
            <% end %>
              </div>
            </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <div class="phatty"></div>
        <h1  class= "section tooltipped" data-position="right" data-delay="50" data-tooltip="The Most Popular Videos on The Hour">WATCH</h1>
          <p class="subsection">Viral <span class="secsource">Youtube</span> Videos</p class="subsection">
        <div id="vid-box" class="buff">
        <% @youtube.each do |x| %>
          <p class="strong"><%=x['title']%></p>
          <div class="video-container depad">
          <iframe src="https://www.youtube.com/embed/<%= x['youtubeid']%>?autoplay=0&theme=dark&color=white&autohide=1&modestbranding=1&showinfo=0&controls=1&rel=0" allowfullscreen></iframe>
        </div>
          <% end %>
        </div>
    </div>
      <div class="col s6">
        <div class="phatty"></div>
          <h1  class= "section tooltipped" data-position="right" data-delay="50" data-tooltip="Click Play to listen to the Hottest tracks">NEW TRACKS</h1>
          <p class="subsection">Top <span class="secsource">SoundCloud</span> Tracks</p class="subsection">
            <div id="mu-box">
          <% @soundc.each do |x| %>
            <%= x['embedhtml'].html_safe %>
          <% end %>
        </div>
    </div>
  </div>
</div>
</div>
