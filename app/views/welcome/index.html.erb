<script src = '/app/assets/javascripts/application.js'> </script>

<div class= "row">
    <div class="col s5">
      <%@youtube["embedhtml"].sub 640, 400%>
      <%@youtube["embedhtml"].sub 480, 214%>
      <%= @youtube.first['embedhtml'].html_safe%>
      <% @youtube[1..2].each do |x| %>
      <iframe width= 400px; height= 214px; src= "http://www.youtube.com/embed/<%= x['id']%>"</iframe>
      <% end %>
    </div>

    <div class="col s3">
    </br>
    <div id="col2">
      <h1 id='headlines'>HEADLINES</h1>
        <div id= "wrapper">
          <% @nyt.each do |x| %>
            <p class="headline"><a class="headlinelink"href ="<%= x['url'] %>"><%= x['title'] %></a></p>
            <p class="body-ar"><%= x["abstract"] %></p>
          <% end %>

          <% @guardian.each do |x| %>
            <p class="body-ar"><a class="headlinelink"href ="<%= x['weburl'] %>"><%= x["webtitle"] %></a></p>
            <p class="body-ar"><%= x["webPublicationDate"] %></p>
          <% end %>

          <% @npr.each do |x| %>
            <p class="headline"><a class="headlinelink"href = "<%=x['link']%>"> <%= x['title']%></a> </p>
            <p class="body-ar"><%= x['teaser']%></p>
          <% end %>

          <% @usa.each do |x| %>
            <p class="headline"><a class="headlinelink"href = "<%=x['link']%>"> <%= x['title']%></a> </p>
            <p class="body-ar"><%= x['description'] %></p>
          <% end %>
        </div>
      </div>
    </div>
<div class="col s3">
  <div class="phatty"></div>
    <h1 id= "tweet">#TRENDING</h1>
      <div id="tweetbox">
        <ul>
          <% @twit.each do |x| %>
          <li>
        <a class="helvetica-bold tweetlink" href = "<%=x[:url]%>" > <%=x[:name]%> </a>
          </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
<div class= "row">
    <div class="col s6">
      <h1>SOUNDCLOUD</h1>
      <p>
        <% @soundc.each do |x| %>
      <%= x['embedhtml'].html_safe %>
        <% end %>
      </p>
  </div>
</div>
